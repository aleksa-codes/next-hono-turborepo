{
  "name": "api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsup src/index.ts --watch --format esm --onSuccess 'bun run start'",
    "build": "tsup src/index.ts --format esm --clean",
    "start": "node dist/index.js",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "deps": "bun x taze@latest --interactive",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.2",
    "dotenv": "^17.2.1",
    "hono": "^4.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "eslint-plugin-n": "^17.21.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
