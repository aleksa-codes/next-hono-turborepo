{
  "name": "api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsup src/index.ts --watch --format esm --onSuccess 'bun run start'",
    "build": "tsup src/index.ts --format esm --clean",
    "start": "node dist/index.js",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "deps": "bun x taze@latest --interactive",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "dotenv": "^17.2.3",
    "hono": "^4.10.7"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-n": "^17.23.1",
    "prettier": "^3.7.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14"
  }
}
